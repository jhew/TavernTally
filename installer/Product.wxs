<?xml version="1.0" encoding="UTF-8"?>
<Wix xmlns="http://wixtoolset.org/schemas/v4/wxs" xmlns:ui="http://wixtoolset.org/schemas/v4/wxs/ui">
  <Package Name="TavernTally"
           Version="$(var.Version)"
           Manufacturer="TavernTally Project"
           UpgradeCode="A1B2C3D4-E5F6-7890-ABCD-123456789012">

    <MajorUpgrade DowngradeErrorMessage="A newer version is already installed." />
    <MediaTemplate EmbedCab="yes" />

    <StandardDirectory Id="LocalAppDataFolder">
      <Directory Id="INSTALLFOLDER" Name="TavernTally" />
    </StandardDirectory>

    <ComponentGroup Id="ProductComponents" Directory="INSTALLFOLDER">
      <Component>
        <File Source="$(var.SourceDir)\TavernTally.exe" />
      </Component>
      <Component>
        <File Source="$(var.SourceDir)\app.ico" />
      </Component>
    </ComponentGroup>

    <Feature Id="ProductFeature" Title="TavernTally" Level="1">
      <ComponentGroupRef Id="ProductComponents" />
    </Feature>

    <ui:WixUI Id="WixUI_Minimal" />

  </Package>
</Wix>
